{
  "display": {
    "productsPerPage": 12,
    "defaultViewMode": "grid",
    "showRatings": true,
    "showPrices": true,
    "enableQuickView": true,
    "defaultSorting": "name-asc"
  },
  "catalog": {
    "enableBackOrder": false,
    "minimumOrderQuantity": 1,
    "maximumOrderQuantity": 999,
    "lowStockThreshold": 5,
    "outOfStockBehavior": "show-disabled",
    "priceDisplay": "with-tax"
  },
  "inquiry": {
    "requireLogin": true,
    "requiredFields": ["name", "email", "phone"],
    "additionalFields": [
      {
        "name": "company",
        "label": "Company Name",
        "type": "text",
        "required": false
      },
      {
        "name": "message",
        "label": "Message",
        "type": "textarea",
        "required": true
      }
    ],
    "notificationEmails": ["admin@example.com"],
    "autoReplyTemplate": "Thank you for your inquiry. We will get back to you within 24 hours."
  },
  "seo": {
    "defaultTitle": "[Product Name] | Your Store",
    "defaultDescription": "High quality products at competitive prices",
    "defaultKeywords": ["products", "quality", "store"],
    "enableCanonicalUrls": true,
    "productUrlPattern": "/products/[slug]",
    "generateSitemap": true
  }
}