{
  "name": "stencil-openapi-tools",
  "version": "1.0.0",
  "description": "OpenAPI validation and generation tools for Stencil CMS",
  "scripts": {
    "validate": "npm run validate:swagger && npm run validate:openapi",
    "validate:swagger": "swagger-codegen validate -i ../openapi.yaml",
    "validate:openapi": "openapi-generator-cli validate -i ../openapi.yaml",
    "validate:schemas": "node scripts/validate-schemas.js",
    "validate:all": "npm run validate && npm run validate:schemas",
    "generate:docs": "redoc-cli build ../openapi.yaml --output ../output/api-docs/index.html --title 'Stencil CMS API Documentation'",
    "generate:postman": "openapi-to-postman -s ../openapi.yaml -o ../validation/postman-collection.json -p",
    "generate:types": "openapi-typescript ../openapi.yaml --output ../output/api-types.ts",
    "generate:client": "openapi-generator-cli generate -g typescript-axios -i ../openapi.yaml -o ../output/typescript-client",
    "generate:all": "npm run generate:docs && npm run generate:postman && npm run generate:types",
    "test:api": "newman run ../validation/postman-collection.json",
    "test:load": "artillery run ../validation/load-test.yaml",
    "test:security": "node scripts/security-audit.js",
    "test:all": "npm run test:api && npm run test:load && npm run test:security",
    "build:resolved": "swagger-codegen generate -l openapi-yaml -i ../openapi.yaml -o ../output --additional-properties outputFile=openapi-resolved.yaml",
    "build:json": "js-yaml ../openapi.yaml > ../output/openapi.json",
    "build:all": "npm run build:resolved && npm run build:json",
    "lint": "spectral lint ../openapi.yaml",
    "lint:fix": "spectral lint ../openapi.yaml --ruleset .spectral.yaml",
    "serve": "redoc-cli serve ../openapi.yaml --watch",
    "dev": "concurrently \"npm run serve\" \"npm run validate:all -- --watch\"",
    "clean": "rimraf ../output/* ../validation/postman-collection.json",
    "setup": "npm install && npm run validate:all && npm run generate:all"
  },
  "keywords": [
    "openapi",
    "swagger",
    "api",
    "validation",
    "stencil",
    "multi-tenant"
  ],
  "author": "CanvaStack Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/canvastack/stencil.git",
    "directory": "openapi/tools"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@redocly/cli": "^1.5.0",
    "artillery": "^2.0.0",
    "concurrently": "^8.2.2",
    "newman": "^6.0.0",
    "openapi-to-postman": "^4.0.0",
    "openapi-typescript": "^6.7.1",
    "redoc-cli": "^0.13.21",
    "rimraf": "^5.0.5",
    "spectral-core": "^1.18.3",
    "swagger-codegen-cli": "^3.0.35"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.18.0",
    "npm": "9.8.1"
  }
}