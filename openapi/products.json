{
  "openapi": "3.0.0",
  "info": {
    "title": "Products API",
    "version": "1.0.0",
    "description": "API for managing product page content and settings"
  },
  "paths": {
    "/api/products/page-content": {
      "get": {
        "summary": "Get product page content",
        "tags": ["Page Content"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PageContent"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update product page content",
        "tags": ["Page Content"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PageContent"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PageContent": {
        "type": "object",
        "required": ["hero", "informationSection", "ctaSections"],
        "properties": {
          "hero": {
            "type": "object",
            "required": ["title", "subtitle"],
            "properties": {
              "title": {
                "type": "object",
                "required": ["prefix", "highlight"],
                "properties": {
                  "prefix": {
                    "type": "string"
                  },
                  "highlight": {
                    "type": "string"
                  },
                  "suffix": {
                    "type": "string",
                    "nullable": true
                  }
                }
              },
              "subtitle": {
                "type": "string"
              },
              "typingTexts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "informationSection": {
            "type": "object",
            "required": ["title", "subtitle", "cards"],
            "properties": {
              "title": {
                "type": "object",
                "required": ["prefix", "highlight"],
                "properties": {
                  "prefix": {
                    "type": "string"
                  },
                  "highlight": {
                    "type": "string"
                  },
                  "suffix": {
                    "type": "string",
                    "nullable": true
                  }
                }
              },
              "subtitle": {
                "type": "string"
              },
              "cards": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["title", "description", "features", "icon"],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "features": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "icon": {
                      "type": "string"
                    },
                    "buttonText": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "ctaSections": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "title", "subtitle", "buttons"],
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "subtitle": {
                  "type": "string"
                },
                "stats": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["value", "label"],
                    "properties": {
                      "value": {
                        "type": "string"
                      },
                      "label": {
                        "type": "string"
                      }
                    }
                  }
                },
                "buttons": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["text", "variant"],
                    "properties": {
                      "text": {
                        "type": "string"
                      },
                      "variant": {
                        "type": "string",
                        "enum": ["primary", "outline"]
                      },
                      "icon": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}