{
  "info": {
    "name": "Stencil CMS API - Complete Collection",
    "description": "Comprehensive API collection for the Stencil CMS multi-tenant platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
