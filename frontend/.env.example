# CanvaStack Stencil CMS - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application Configuration
VITE_APP_NAME="CanvaStack Stencil CMS"
VITE_APP_VERSION="1.0.0"
VITE_APP_BASE_URL="/"

# API Configuration
VITE_API_BASE_URL="https://api.canvastencil.com/api"
VITE_API_TIMEOUT="15000"

# Environment
NODE_ENV="production"
VITE_APP_ENVIRONMENT="production"

# Debug Configuration
VITE_DEBUG_MODE="false"

# Security & Monitoring
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
VITE_SENTRY_ORG="your-org"
VITE_SENTRY_PROJECT="stencil-cms"

# Analytics
VITE_GA_ID="GA-XXXXXXXXX"
VITE_HOTJAR_ID="1234567"

# Features
VITE_ENABLE_PWA="true"
VITE_ENABLE_OFFLINE="true"
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_ERROR_REPORTING="true"

# Currency Configuration
VITE_DEFAULT_EXCHANGE_RATE="16773"
VITE_DEFAULT_CURRENCY="IDR"
VITE_SECONDARY_CURRENCY="USD"

# Performance
VITE_PERFORMANCE_MONITORING="true"
VITE_WEB_VITALS_TRACKING="true"

# Development Only
VITE_DEBUG_MODE="false"
VITE_MOCK_API="false"

# Deployment Platform (github, vercel, netlify, aws, gcp, azure)
VITE_APP_DEPLOY_PLATFORM="github"
VITE_APP_IS_GITHUB_PAGES="false"

# Build Configuration
VITE_BUILD_SOURCEMAP="false"
VITE_BUILD_MINIFY="true"

# CI/CD Secrets (set in your deployment platform)
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
# SLACK_WEBHOOK_URL=your-slack-webhook-url
# GITHUB_TOKEN=your-github-token