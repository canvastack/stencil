#################################################################
# FRONTEND ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env.development and .env.production
# Update values according to your environment
#################################################################

# API Base URLs
VITE_API_URL=http://localhost:8000/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_PLATFORM_API_URL=http://localhost:8000/api/v1/platform
VITE_TENANT_API_URL=http://localhost:8000/api/v1/tenant
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_TOKEN_KEY=stencil_auth_token
VITE_AUTH_USER_KEY=stencil_auth_user
VITE_AUTH_URL=http://localhost:8000/auth

# Session & Cookie
VITE_SESSION_DOMAIN=localhost
VITE_SECURE_COOKIE=false

# WebSocket (Optional - Laravel Reverb)
VITE_WEBSOCKET_URL=ws://localhost:6001
VITE_REVERB_APP_KEY=

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=true
VITE_USE_MOCK_DATA=false

# App Info
VITE_APP_NAME=CanvaStencil
VITE_APP_TITLE=Stencil CMS
VITE_APP_VERSION=3.7.0
VITE_APP_ENV=development
VITE_APP_ENVIRONMENT=development
VITE_APP_DESCRIPTION=Multi-Tenant CMS Platform

# Base URL Configuration
VITE_APP_BASE_URL=/
VITE_APP_IS_GITHUB_PAGES=false
VITE_APP_DEPLOY_PLATFORM=local

# Performance & Logging
VITE_APP_LOG_LEVEL=debug
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Security & Monitoring (Optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ORG=
VITE_SENTRY_PROJECT=stencil-cms

# Analytics (Optional)
VITE_GA_ID=
VITE_HOTJAR_ID=

# Performance Monitoring (Optional)
VITE_PERFORMANCE_MONITORING=false
VITE_WEB_VITALS_TRACKING=false

# Default Tenant
VITE_DEFAULT_TENANT_ID=

# Retry Configuration
VITE_REQUEST_RETRY_ATTEMPTS=3
VITE_REQUEST_RETRY_DELAY=1000

# Build Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# Environment
NODE_ENV=development

# CI/CD Secrets (set in your deployment platform)
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
# SLACK_WEBHOOK_URL=your-slack-webhook-url
# GITHUB_TOKEN=your-github-token