#################################################################
# FRONTEND PRODUCTION ENVIRONMENT
# Used when building: npm run build
# Backend: https://api.etchingxenial.biz.id
#################################################################

# API Base URLs (Production Backend)
VITE_API_URL=https://api.etchingxenial.biz.id/api/v1
VITE_API_BASE_URL=https://api.etchingxenial.biz.id/api/v1
VITE_PLATFORM_API_URL=https://api.etchingxenial.biz.id/api/v1/platform
VITE_TENANT_API_URL=https://api.etchingxenial.biz.id/api/v1/tenant
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_TOKEN_KEY=stencil_auth_token
VITE_AUTH_USER_KEY=stencil_auth_user
VITE_AUTH_URL=https://api.etchingxenial.biz.id/auth

# Session & Cookie
VITE_SESSION_DOMAIN=.etchingxenial.biz.id
VITE_SECURE_COOKIE=true

# WebSocket (Production - Laravel Reverb with SSL)
VITE_WEBSOCKET_URL=wss://api.etchingxenial.biz.id:6001
VITE_REVERB_APP_KEY=your-production-reverb-app-key

# Feature Flags (Production)
VITE_ENABLE_DEBUG=false
VITE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=false
VITE_USE_MOCK_DATA=false

# App Info
VITE_APP_NAME=CanvaStencil
VITE_APP_TITLE=Stencil CMS
VITE_APP_VERSION=3.7.0
VITE_APP_ENV=production
VITE_APP_ENVIRONMENT=production
VITE_APP_DESCRIPTION=Multi-Tenant CMS Platform

# Base URL Configuration
VITE_APP_BASE_URL=/
VITE_APP_IS_GITHUB_PAGES=false
VITE_APP_DEPLOY_PLATFORM=production

# Performance & Logging
VITE_APP_LOG_LEVEL=error
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true

# Default Tenant
VITE_DEFAULT_TENANT_ID=

# Retry Configuration
VITE_REQUEST_RETRY_ATTEMPTS=3
VITE_REQUEST_RETRY_DELAY=1000

# Production Only
NODE_ENV=production
